<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="true" scanPeriod="30 seconds">

    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
            <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                <prettyPrint>false</prettyPrint>
            </jsonFormatter>
            <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSXXX</timestampFormat>
            <timestampFormatTimezoneId>Europe/Berlin</timestampFormatTimezoneId>
            <appendLineSeparator>true</appendLineSeparator>
        </layout>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Suppress JsonPath debug logs -->
    <logger name="com.jayway.jsonpath" level="WARN" />

    <!-- Logbook: keep TRACE only if using redaction and aware of data sensitivity -->
    <logger name="org.zalando.logbook.Logbook" level="TRACE" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <!-- Application logs -->
    <logger name="com.academy" level="INFO" />

    <!-- Spring framework logs -->
    <logger name="org.springframework" level="WARN" />

    <!-- Hibernate logs -->
    <logger name="org.hibernate" level="WARN" />

</configuration>

